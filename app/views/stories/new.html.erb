<%= form_for @story do |f| %>
  <%= f.label :theme %>
  <%= f.select :theme, ["Fairy Tales", "Sci-Fi", "Dongeon and Dragons"] %>
  
  <%= f.label :age %>
  <%= f.number_field :age %>
  
  <%= f.label :main_character %>
  <%= f.text_field :name %>

  <%= f.label :secondary_character %>
  <%= f.text_field :secondary_character %>

  <%= f.label :fav_object %>
  <%= f.text_field :fav_object %>
  
  <%= f.submit "Generate History" %>
<% end %>
